# EduSphere SIS - MongoDB Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas Connection String
# Get this from MongoDB Atlas Dashboard > Connect > Connect your application
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/edusphere?retryWrites=true&w=majority

# JWT Secret for Authentication (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# JWT Token Expiry
JWT_EXPIRES_IN=7d

# Port for Express Server (optional, for backend API)
PORT=5000
